<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="DefaultTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="TranslucentDefault" parent="DefaultTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse</item>
        <!--<item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>-->
    </style>

    <style name="BlackTheme" parent="android:Theme.Holo">
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>


    <style name="TranslucentBlack" parent="BlackTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>
    </style>

    <declare-styleable name="VolumeEnvelopeView">
        <attr name="color" format="color" />
    </declare-styleable>
</resources>